<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Lyricated" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_night</item>
        <item name="colorPrimaryVariant">@color/lyric_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">@color/gray_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lyric_gray_night</item>
        <item name="colorSecondaryVariant">@color/gray_night</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/light_blue_night</item>
        <item name="colorPrimaryDark">@color/header_gray_night</item>
        <item name="colorOnSurface">@color/paragraph_gray_night</item>
        <item name="colorControlHighlight">@color/lyric_gray_night</item>

        <item name="android:windowBackground">@color/lyric_gray_night</item>
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/lyric_gray</item>
        <item name="android:layout_marginLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/app_padding</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/light_gray_night</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NoWiredStrapInNavigationBar" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">?attr/colorSecondaryVariant</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorControlHighlight">@color/lyric_gray_night</item>
        <item name="colorAccent">@color/light_blue_night</item>
    </style>
</resources>