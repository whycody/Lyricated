<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="translationItem"
            type="com.whycody.lyricated.data.TranslationItem" />
        <variable
            name="ttsAvailable"
            type="boolean" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/app_padding"
        android:paddingBottom="20dp"
        tools:context=".search.lyric.translation.LyricTranslationFragment"
        android:visibility="@{translationItem.translatedSentence == null ? View.GONE : View.VISIBLE}"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_study_mode_translation"
            android:paddingHorizontal="@dimen/app_padding"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@{translationItem.drawable}"/>

            <TextView
                android:id="@+id/contentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{translationItem.translatedSentence}"
                android:textSize="15sp"
                android:textColor="?attr/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:paddingHorizontal="12dp"/>

            <ImageButton
                android:id="@+id/playTTSBtn"
                android:contentDescription="@string/tts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="@{ttsAvailable ? View.VISIBLE : View.GONE}"
                android:src="@drawable/ic_round_volume_up_24"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</layout>