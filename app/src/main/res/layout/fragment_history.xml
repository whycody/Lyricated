<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="onlySaved"
            type="Boolean" />
        <variable
            name="listsAreFilled"
            type="Boolean" />
        <import type="android.view.View"/>
    </data>

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".library.history.HistoryFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sortHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/app_padding"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_weight="1"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:textSize="17sp"
                    android:text="@{onlySaved ? @string/saved : @string/history}" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_down"/>

            </LinearLayout>

            <Button
                android:id="@+id/cleanListBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:paddingHorizontal="@dimen/app_padding"
                android:text="@{onlySaved ? @string/deselectall : @string/deletehistory}"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="@{listsAreFilled ? View.VISIBLE : View.GONE}"
                android:background="@android:color/transparent"
                android:textColor="@drawable/s_clear_btn"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/historyRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layoutAnimation="@anim/layout_fall_down"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>