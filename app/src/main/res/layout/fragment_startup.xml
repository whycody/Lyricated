<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSecondary"
    tools:context=".main.startup.StartupFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/getStartedBtn"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/astronautImageView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/il_hello_astronaut"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_in"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="?attr/colorAccent"
            android:layout_gravity="center"
            android:textAllCaps="true"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getStartedBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="50dp"
        android:background="@drawable/s_next_btn"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textColor="?attr/colorAccent"
        android:text="@string/get_started"/>

</androidx.constraintlayout.widget.ConstraintLayout>