<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="historyIsAvailable"
            type="boolean" />
    </data>

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        tools:context=".home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="60dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/lyricatedBannerFragment"
                android:name="com.whycody.lyricated.home.banner.main.MainBannerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/currentLanguageFragment"
                android:name="com.whycody.lyricated.current.language.CurrentLanguageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/searchFieldFragment"
                android:name="com.whycody.lyricated.search.field.SearchFieldFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="@dimen/app_padding"
                android:layout_marginEnd="@dimen/app_padding"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="15sp"
                android:textColor="?attr/colorPrimaryVariant"
                android:paddingHorizontal="@dimen/app_padding"
                android:visibility="@{historyIsAvailable ? View.VISIBLE : View.GONE}"
                android:textStyle="bold"
                android:text="@string/previous_words"/>

            <TextView
                android:id="@+id/searchFirstPhraseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingHorizontal="@dimen/app_padding"
                android:textColor="?attr/colorPrimaryVariant"
                android:textStyle="bold"
                android:text="@string/search_first_phrase"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:visibility="@{historyIsAvailable ? View.GONE : View.VISIBLE}"
                app:drawableLeftCompat="@drawable/ic_round_arrow_upward_24" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/historyRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:overScrollMode="never"
                        android:layoutAnimation="@anim/layout_fall_down"/>

                </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>