<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="translationItem"
            type="com.whycody.lyricated.data.TranslationItem" />
        <variable
            name="translationIsShown"
            type="boolean" />
        <variable
            name="ttsAvailable"
            type="boolean" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/app_padding"
        android:paddingBottom="20dp"
        tools:context=".search.lyric.translation.LyricTranslationFragment"
        android:visibility="@{translationItem.translatedSentence == null ? View.GONE : View.VISIBLE}"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_study_mode_translation"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/flagImage"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:paddingStart="@dimen/app_padding"
                android:contentDescription="@null"
                android:paddingVertical="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@{translationItem.drawable}"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/translationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:text="@{translationItem.translatedSentence}"
                android:textSize="15sp"
                android:textColor="?attr/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:paddingEnd="@dimen/app_padding"
                app:layout_constraintLeft_toRightOf="@id/flagImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/playTTSBtn"
                android:paddingStart="12dp"/>

            <ImageButton
                android:id="@+id/playTTSBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/tts"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingEnd="@dimen/app_padding"
                android:visibility="@{ttsAvailable ? View.VISIBLE : View.GONE}"
                android:src="@drawable/ic_round_volume_up_24"
                android:background="@android:color/transparent"
                tools:ignore="RtlSymmetry" />

            <View
                android:id="@+id/viewAboveTranslation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/s_study_mode_translation"
                app:layout_constraintLeft_toLeftOf="@id/translationText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/translationText"
                app:layout_constraintBottom_toBottomOf="@id/translationText"
                android:visibility="@{translationIsShown ? View.GONE : View.VISIBLE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>