<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="translationItem"
            type="com.whycody.wordslife.data.TranslationItem" />
        <variable
            name="translationIsShown"
            type="boolean" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/app_padding"
        android:paddingBottom="20dp"
        tools:context=".search.lyric.translation.LyricTranslationFragment"
        android:visibility="@{translationItem.translatedSentence == null ? View.GONE : View.VISIBLE}"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_lyric_background"
            android:paddingHorizontal="@dimen/app_padding"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/flagImage"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@{translationItem.drawable}"/>

            <TextView
                android:id="@+id/translationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{translationItem.translatedSentence}"
                android:textSize="15sp"
                android:textColor="?attr/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center|start"
                app:layout_constraintLeft_toRightOf="@id/flagImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingStart="12dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/black"
                app:layout_constraintLeft_toLeftOf="@id/translationText"
                app:layout_constraintRight_toRightOf="@id/translationText"
                app:layout_constraintTop_toTopOf="@id/translationText"
                app:layout_constraintBottom_toBottomOf="@id/translationText"
                android:visibility="@{translationIsShown ? View.GONE : View.VISIBLE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>