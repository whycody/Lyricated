<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="confItem"
            type="com.whycody.wordslife.data.ConfigurationItem" />
        <variable
            name="interactor"
            type="com.whycody.wordslife.search.configuration.ConfigurationInteractor" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/s_conf_item">

            <TextView
                android:id="@+id/confText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{confItem.name}"
                android:clickable="true"
                android:focusable="true"
                android:textSize="15sp"
                android:paddingStart="11dp"
                android:paddingVertical="8dp"
                android:textColor="?attr/colorPrimaryVariant"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp"
                android:layout_marginVertical="9dp"
                android:alpha="0.4"
                android:contentDescription="@string/delete"
                android:onClick="@{()->interactor.confRemoved(confItem)}"
                android:src="@drawable/ic_clear"/>

        </LinearLayout>

    </LinearLayout>

</layout>