<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="lyricViewModel"
            type="com.whycody.wordslife.search.lyric.LyricViewModel" />
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/app_padding"
        android:paddingEnd="@dimen/app_padding"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_lyric_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="53dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_quote"
                android:scaleType="fitCenter"
                android:paddingTop="4dp"
                android:paddingStart="@dimen/app_padding" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="@dimen/app_padding"
                android:paddingStart="10dp"
                android:text="@{lyricViewModel.currentExtendedLyricItem.mainLangSentence}"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

        </LinearLayout>

    </FrameLayout>

</layout>