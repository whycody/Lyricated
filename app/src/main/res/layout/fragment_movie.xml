<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.whycody.wordslife.search.lyric.movie.MovieFragment"/>
        <import type="android.view.View"/>
        <variable
            name="lyricViewModel"
            type="com.whycody.wordslife.search.lyric.LyricViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/app_padding"
        android:paddingEnd="@dimen/app_padding"
        android:paddingBottom="20dp"
        tools:context=".search.lyric.movie.MovieFragment"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_lyric_background"
            android:paddingBottom="@dimen/app_padding"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/movieHeader"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:paddingStart="@dimen/app_padding"
                    android:src="@drawable/ic_movie"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:paddingTop="@dimen/app_padding"
                    android:paddingBottom="@dimen/app_padding"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{lyricViewModel.currentExtendedLyricItem.movieItem.mainTitle}"
                        android:textColor="?attr/colorPrimaryVariant"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/app_padding"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/app_padding"
                        android:ellipsize="end"
                        android:text="@{lyricViewModel.currentExtendedLyricItem.movieItem.translatedTitle == null ? (lyricViewModel.currentExtendedLyricItem.movieItem.episodeItem == null ? @string/movie : @string/series) : lyricViewModel.currentExtendedLyricItem.movieItem.translatedTitle}" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/s_time_backgr"
                android:layout_marginTop="5dp"
                android:layout_marginStart="@dimen/app_padding"
                android:layout_marginEnd="@dimen/app_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="11dp"
                    android:layout_marginEnd="10dp"
                    android:text="@{lyricViewModel.currentExtendedLyricItem.movieItem.episodeItem != null ? ((@string/season).charAt(0) + Integer.toString(lyricViewModel.currentExtendedLyricItem.movieItem.episodeItem.season) + `:` + (@string/episode).charAt(0) + Integer.toString(lyricViewModel.currentExtendedLyricItem.movieItem.episodeItem.episode) + `, ` + @string/time + `: ` + lyricViewModel.currentExtendedLyricItem.time) : @string/time + `: ` + lyricViewModel.currentExtendedLyricItem.time}"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_item_backgr"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="7dp"
                    android:paddingEnd="11dp"
                    android:gravity="end|center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_play"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play"
                        android:textStyle="bold"
                        android:textColor="@color/red"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>